@{
    ViewBag.Title = "Web App";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <link href="~/lib/Font-Awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" tyep="text/css" />
    <link href="~/styles/site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="page-wrapper">
        <div id="sidebar-wrapper">
            <div id="sidebar_btn">
                <i class="fa fa-arrows-h"></i>
            </div>
            <div id="menu-wrapper">

                <div id="user">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <img class="userimg" src="~/images/mypic.jpg" alt="My Picture" />
                        <br />
                        <span id="username">Amador R.</span>
                    }
                </div>

                <ul class="menu">
                    <li class="active">
                        <a asp-controller="WebApp" asp-action="Index">
                            <span class="menu-item-icon"><i class="fa fa-home"></i></span>
                            <span class="menu-item-text">Home</span>
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a asp-controller="WebApp" asp-action="Trips">
                                <span class="menu-item-icon"><i class="fa fa-car"></i></span>
                                <span class="menu-item-text">Trips</span>
                            </a>
                        </li>
                    }

                    <li>
                        <a asp-controller="WebApp" asp-action="About">
                            <span class="menu-item-icon"><i class="fa fa-info"></i></span>
                            <span class="menu-item-text">About</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="WebApp" asp-action="Contact">
                            <span class="menu-item-icon"><i class="fa fa-envelope"></i></span>
                            <span class="menu-item-text">Contact</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="main-wrapper">
            <nav class="navbar navbar-inverse navbar-static-top">
                <div class="container-fluid pull-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-controller="Auth" asp-action="Logout" class="navbar-form" novalidate>
                            <input type="submit" value="Logout" class="btn btn-danger" />
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-controller="Auth" asp-action="Login" class="navbar-form" novalidate>
                            <input type="submit" value="Login" class="btn btn-success" />
                        </form>
                    }
                </div>
            </nav>
            <div id="main">
                <div>
                    @RenderBody()
                </div>
            </div>
            <div id="footer">
                &copy; 2015 Amador Rivera
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/scripts/site.js"></script>

    @*The point of RenderSection is to only include scripts where the section Scripts is declared (see Trips.cshtml)*@
    @RenderSection("Scripts", false)  

</body>
</html>